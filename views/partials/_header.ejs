<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- checks for user -->
    <% if (locals.user) { %>
      <a class="navbar-brand text-light">
        User: <%= locals.user.email %>
      </a>
      <form action="/logout" method="POST">
        <button type="submit" class="btn btn-sm btn-outline-light ml-md-auto">Logout</button>
      </form>
    <% } else { %>
        <a class="btn btn-sm btn-outline-light ml-md-auto" href="/login">Login</a>
        <a class="btn btn-sm btn-outline-light ml-md-3" href="/register">Register</a>
    <% } %>
  </nav>
</header>
<% if (locals.errMessage) { %>
  <div class="alert alert-danger">
    ERROR: <%= locals.errMessage %>
  </div>
<% } %>